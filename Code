                    if (EnemyClick == false)
                        for (int j = 0; j < 3; j++)
                        {
                            for (int i = 0; i < 3; i++)
                            {
                                if (buttons[i, j].Text == pturn)
                                    player++;
                                if (player == 2)
                                {
                                    for (int k = 0; k < 3; k++)
                                        if (buttons[k, j].Enabled == true)
                                        {
                                            buttons[k, j].Text = eturn;
                                            buttons[k, j].Enabled = false;
                                            EnemyClick = true;
                                        }
                                    break;
                                }
                            }
                            player = 0;
